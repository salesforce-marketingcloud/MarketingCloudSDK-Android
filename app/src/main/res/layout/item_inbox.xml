<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Read/Unread Indicator -->
        <View
            android:id="@+id/read_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="?attr/colorPrimary"
            android:visibility="visible" />

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_inbox_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/fira_sans"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold"
                tools:text="Important Marketing Message Subject Line" />

            <TextView
                android:id="@+id/textview_inbox_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Oct 2, 2025" />

        </LinearLayout>

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete_message"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:layout_marginStart="8dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:iconSize="20dp"
            android:contentDescription="Delete message" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>